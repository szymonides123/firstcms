{% extends 'admin/layout.html.twig' %}

{% block body %}
  <table class="table table-hover" style="margin-top: 100px;"><tr>
        <th>Login</th><th>Rola</th><th>Aktywny?</th><th>Zmień rolę</th><th>Dezaktywuj</th><th>Aktywuj</th>
        {% for user in users %}
    </tr>
        <tr>
            <td>{{user.username}}</td><td>{{user.roles}}</td><td>{{user.enabled}}</td>
            <td><a class="btn btn-primary" href="{{path('user_changerole',{'id': user.id}) }}" >Zmień rolę</a></td>
            <td><a class="btn btn-primary" href="{{path('user_dezactivate',{'id': user.id}) }}" >Dezaktywuj</a></td>          
            <td><a class="btn btn-primary" href="{{path('user_activate',{'id': user.id}) }}" >Aktywuj</a></td>
        </tr>
        {% endfor %}
        
</table>
{% endblock %}


